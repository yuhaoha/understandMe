<view class ="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">出题记录</view>  
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">做题记录</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">灵魂匹配</view>  
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <!--出题记录-->  
    <swiper-item>  
      <view wx:for="{{items}}" class='page_card'data-index="{{index}}" bindtap='do_answer'>
        <view class='page-xx' >
            <image src='{{item.raiseAvatarUrl}}' class= 'avatar'></image>
            <view class='page-xx-text' style='width:90%'>
              <view class='xx-text-name'>
                <text class ="text-name">{{item.raiseNickName}} </text> 
                <text class ="jian-text">正确率：{{item.rate}}%</text>
              </view>
            </view>
        </view>
        <view class="btn">
          <view style='margin:7px;display:flex;flex-direction:row;'>
            <button class="btn-wx" > 查看TA的答案</button>
          </view>
        </view>
      </view> 
    </swiper-item>
    <!--做题记录-->    
    <swiper-item>  
     <view wx:for-items="{{items2}}" wx:key="{{item._id}}" class='page_card'data-index="{{index}}" bindtap='my_answer'>
      <view class='page-xx' >
        <image src='{{item.raiseAvatarUrl}}' class= 'avatar'></image>
          <view class='page-xx-text' style='width:90%'>
            <view class='xx-text-name'>
              <text class ="text-name">{{item.raiseNickName}} </text> 
              <text class ="jian-text">正确率：{{item.rate}}%</text>
            </view>
          </view>
      </view>
      <view class="btn">
       <view style='margin:auto;display:flex;flex-direction:row;'>
          <button class="btn-wx" bindtap='answer'> 查看TA的答案</button>
        </view>
      </view>
    </view> 
    </swiper-item>
    <!--灵魂匹配-->
    <swiper-item>  
     <view wx:for-items="{{items3}}" class='page_card'wx:key="{{item._id}}"data-index="{{index}}"bindtap='soul_answer'>
      <view class='page-xx' >
        <image src='{{item.avatar_url}}' class= 'avatar'></image>
          <view class='page-xx-text' style='width:90%'>
            <view class='xx-text-name'>
              <text class ="text-name">{{item.weixin}} </text> 
              <!-- <text class ="jian-text">正确率：{{item.rate}}%</text> -->
            </view>
          </view>
      </view>
      <view class="btn">
       <view style='margin:auto;display:flex;flex-direction:row;'>
          <button class="btn-wx" bindtap='answer'> 查看TA的答案</button>
        </view>
      </view>
    </view> 
    </swiper-item>
</swiper>  
