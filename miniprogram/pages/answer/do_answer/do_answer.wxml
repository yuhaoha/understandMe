<!--pages/answer/do_answer/do_answer.wxml-->
 <view wx:for-items="{{items}}" wx:key="{{item._id}}" class='page_card bg-grey light'>
      <view class='page-xx' >
          <view class='page-xx-text' style='width:90%'>
            <view class='xx-text-name'>
              <text class ="text-name">第{{item.number}}题：{{item.title}} </text> 
            </view>
            <view class='xx-text-name'> 
              <text class ="jian-text">正确答案：{{item.answer[item.choice]}}</text> 
            </view>
            <view class='xx-text-name'> 
              <text class ="jian-text">我的答案：{{item.answer[item.myChoice]}}</text> 
            </view>
          </view>
        </view>
      </view>
