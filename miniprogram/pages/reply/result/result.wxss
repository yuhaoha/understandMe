/* pages/reply/result/result.wxss */

page{
height:100%
}

.body{
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  flex: 1;
  min-height: 100%;
  font-size: 30rpx;
  padding-left: 15px;
  padding-right: 15px;
  overflow: hidden;
}

.title{
  font-size: 40rpx;
  font-weight: bold;
  font-family: sans-serif;
  display: flex;
  justify-content: center; 
  margin-top: 10%;
  margin-bottom: 10%;
}

.avatar{
  width: 100rpx;
  height:100rpx;
  border-radius:50%;
  display: flex;
  overflow:hidden;
  text-align: center;
}

.description{
  background-color: #CBA7F9;
  margin-top: 10%;
  margin-bottom: 20%;
  border-radius: 20rpx;
  padding: 20rpx;
}

.buttonLook{
    width: 100px;
    height: 100px;
    border: 0 solid #CBA7F9;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
    display: flex; 
    align-items: center; 
    justify-content: center;
    background-color: #CBA7F9;
}

.buttonHome{
  font-size: 25rpx;
  margin-left:37%;
  margin-right: 37%;  
  margin-top: 30%;
  background-color: #CBA7F9;
}
.change{
  margin-top: 10%;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: center; 
}