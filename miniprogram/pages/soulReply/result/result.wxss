/* pages/reply/result/result.wxss */

page{
height:100%
}

.body{
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  flex: 1;
  min-height: 100%;
  font-size: 30rpx;
  padding-left: 15px;
  padding-right: 15px;
  overflow: hidden;
}

.title{
  font-size: 40rpx;
  font-weight: bold;
  font-family: sans-serif;
  display: flex;
  justify-content: center; 
  margin-top: 10%;
  margin-bottom: 10%;
}

.description{
  background-color: #CBA7F9;
  margin-top: 10%;
  margin-bottom: 20%;
  border-radius: 20rpx;
  padding: 20rpx;
}

.buttonLook{
    width: 300px;
    height: 150px;
    border: 0 solid #CBA7F9;
    border-radius: 20px;
    box-shadow: 4px 1px 1px #cccccc;
    display: flex; 
    align-items: center; 
    justify-content: center;
    background-color: #CBA7F9;
}
.photo{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
}