  <view id='{{index}}' data-id='{{item._id}}' bindtap='choose_question'>
    <block wx:if='{{index == clickID}}'>
      <view class='list-item' style='background:grey'>
        <image class='left'   
        src='{{item.avatar_url}}'></image>
        <view class='right'>
          <text id='name'>{{item.username}}</text>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class='list-item'>
        <image class='left'   
        src='{{item.avatar_url}}'></image>
        <view class='right'>
          <text id='name'>{{item.username}}</text>
        </view>
      </view>
    </block>
  </view>
